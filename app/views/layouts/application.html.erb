<!DOCTYPE html>
<html>
  <head>
    <title>Jungle</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <%= render 'layouts/top_nav' %>
    <main class="container">
      <% if active_sale? %>
        <% active_sale?.each do |sale| %>
          <p class="alert alert-info"><%= sale.name %>: sale going on! <strong>Everything is <%= sale.percent_off %>% off</strong> from <%= sale.starts_on %> to <%= sale.ends_on %>.
          </p>
        <% end %>
      <% end %>
      <%= yield %>
    </main>
    <%= yield :end_of_body %>
  </body>
</html>
